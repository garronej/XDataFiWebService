<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="WpfXDataFi.En_teteControl"
	x:Name="UserControl"
	d:DesignWidth="793.6" d:DesignHeight="100">

	<Grid x:Name="En_tete" 
		Background="{StaticResource BackgroundColor}" Margin="0" >
		<Label x:Name="Title" 
			Content="XDataFi" 
			HorizontalAlignment="Center" 
			VerticalAlignment="Center" 
			Foreground="{StaticResource TitleColor}"
			FontSize="32" 
			FontWeight="Bold" />
		<Rectangle Fill="{StaticResource TitleColor}" Height="5" VerticalAlignment="Bottom" Margin="0,0,0,1" />
		<Rectangle Fill="{StaticResource BackgroundColor}" Height="1" VerticalAlignment="Bottom" />
	</Grid>

</UserControl>